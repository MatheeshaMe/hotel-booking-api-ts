{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./prodenv/dist",
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}